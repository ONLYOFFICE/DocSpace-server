<service>
    <id>Identity-API</id>
    <name>IdentityAPI</name>
    <description>Run Identity API as a Service</description>
    <env name="AUTHORIZATION_HOME" value="%BASE%"/>
    <env name="API_JAR" value="%BASE%\target\api-0.0.1.jar" />
    <executable>java</executable>
    <arguments>-Xmx256m -jar "%API_JAR%"</arguments>
    <logmode>rotate</logmode>
    <onfailure action="restart" delay="10 sec"/>
</service>
<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <JsonTemplateLayout eventTemplateUri="classpath:layouts/ASCLayout.json">
                <EventTemplateAdditionalField key="instanceId" value="${spring:server.host}" />
                <EventTemplateAdditionalField key="applicationContext" value="${spring:spring.application.name}" />
            </JsonTemplateLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>